<mvc:View
    controllerName="vdl.desafiogateway.desafiofiorigateway.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        showFooter="true">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="table"
                width="auto"
                mode="MultiSelect"
                items="{
                    path: '/SolicitacaoSet',
                    sorter: {
                        path: 'IdSolicitacao',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="nameColumn">
                        <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                    </Column>
                    <Column>
                        <Text text="Código Produgo"/>
                    </Column>
                    <Column>
                        <Text text="Descrição Produto"/>
                    </Column>
                    <Column id="unitNumberColumn" >
                        <Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
                    </Column>
                    <Column>
                        <Text text="Preço Novo"/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="Data e Hora da Solicitação"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{IdSolicitacao}"/>
                            <ObjectIdentifier
                                title="{CodProduto}"/>
                            <ObjectIdentifier
                                title="{DescProduto}"/>
                            <ObjectNumber
                                number="{
                                    path: 'PrecoAtual',
                                    formatter: '.formatter.numberUnit'
                                }" />
                            <ObjectNumber
                                number="{
                                    path: 'PrecoNovo',
                                    formatter: '.formatter.numberUnit'
                                }" />
                            <ObjectIdentifier
                                title="{DataHoraSolicitacao}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>
        <semantic:positiveAction>
			<semantic:PositiveAction text="Aprovar" press=".onUpdateStockObjects"/>
		</semantic:positiveAction>
		<semantic:negativeAction>
			<semantic:NegativeAction text="Rejeitar" press=".onUnlistObjects"/>
		</semantic:negativeAction>
    </semantic:SemanticPage>

</mvc:View>